@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ProjectPhase1.Models.LogIn
<!DOCTYPE html>

<html>
<head>

    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/modern-business.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>
    <meta name="viewport" content="width=device-width" />
    
    <title style="color:gold ; font-family:'Felix Titling'; font-size:xx-large" > LogIn </title> 

</head>

<body>
    @section IndexSec{
        <form class="navbar-form navbar-left pull-right" action="/Home/Search" role="search">
            <div class="form-group">
                <input type="text" class="form-control" name="search" placeholder="search" />
            </div>
            <button type="submit" class="btn btn-success">Search</button>
        </form>
    }
    <div class="col-lg-6" style="margin-top:150px; margin-left:370px; background-color:lightblue; width:300px; height:200px; border-radius:10px;">
        <div class="container" style="font-family:Constantia; color:blue; margin-top:auto; margin-left:auto;">
            <div class="row">
                <div class="col-md-offset-0 col-md-3">
                    <div class="form-login">

                       
                        <form action="/Home/AfterLogin">
                            <br>
                            <a style="color:black ; font-family:'Felix Titling'"> Username :</a> <input  type="text"  name="Name" /><br>
                            <a style ="color:black; font-family:'Felix Titling'">Password :</a> <input type="password" name="Password" /><br>
                            <input type="submit" value="Login" />
                            <a href="/Home/SignUp" > Sign Up </a> 
                            <h3 style="color:black">@ViewBag.SignInMessage</h3>
                        </form>
                        <br>

                            <!--   --------------------------------------------------------------------                     -->
                      
                             <!----------------------------------------------------------------------------------->

</div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>
