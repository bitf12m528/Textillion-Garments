<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/modern-business.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>
    
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/bootstrap.js"></script>
</head>
<body class="container" style="background-image: url(/Content/images/Final2.jpg) ; height:auto " >

    <!--[if lt IE 9]-->

    <nav class="navbar navbar-default" style=" height:80px ; margin-top:0px ; background-color:mintcream; width:100%">
        <input type="image" class="navbar-form navbar-left pull-right" src="~/Content/images/logo2.jpg">
        <div class="nav nav-pills navbar-left"><ul><li style="font-family:'Agency FB';color:darkblue  ; height:auto;font-size:xx-large;"><strong>Textillion</strong></li></ul></div>
        <div class=" navbar-header" style="align-items:stretch">
            <ul class="nav navbar-nav ">

                <li style="scrollbar-face-color: white; font-family: 'Felix Titling'; color: gold; font-size: large; text-shadow: initial; ">@Html.ActionLink("Home", "Index", "Home")</li>
                <li style="scrollbar-face-color:gold; font-family: 'Felix Titling' ; font-size:large ;text-shadow:initial" >@Html.ActionLink("About", "AboutUs", "Home")</li>
                <li style="scrollbar-face-color: gold; font-family: 'Felix Titling'; font-size: large; text-shadow: initial">@Html.ActionLink("Store", "Store", "Home")</li>
                <li style="scrollbar-face-color: gold; font-family: 'Felix Titling'; font-size: large; text-shadow: initial">@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li style="scrollbar-face-color: gold; font-family: 'Felix Titling'; font-size: large; text-shadow: initial">@Html.ActionLink("Wish List", "WishList", "Home")</li>
                @*<li style="scrollbar-face-color:gold; font-family: 'Felix Titling'; font-size: large">@Html.ActionLink("LogIn", "Login", "Home")</li>
                <li style="scrollbar-face-color:gold; font-family: 'Felix Titling'; font-size: large">@Html.ActionLink("Sign up", "SignUp", "Home")</li>*@
                
                @if (Session["Name"] == null)
                { 
                    <li style="scrollbar-face-color: gold; font-family: 'Felix Titling'; font-size: large; text-shadow: initial">@Html.ActionLink("LogIn", "Login", "Home")</li>
                <li style="scrollbar-face-color: gold; font-family: 'Felix Titling'; font-size: large; text-shadow: initial">@Html.ActionLink("Sign up", "SignUp", "Home")</li>
                
                }
                @if (Session["Name"] != null)
                { 
                    <li style="scrollbar-face-color: gold; font-family: 'Felix Titling'; font-size: large; text-shadow: initial">@Html.ActionLink("LogOut", "Logout", "Home")</li>
                    <li style="scrollbar-face-color: gold; font-family: 'Felix Titling'; font-size: large; text-shadow: initial">@Html.ActionLink("Login As: " +(string)@Session["Name"] , "Index", "Home")</li>
                
                }


            </ul>
        </div>
    </nav>
    @RenderSection("IndexSec", false)

    <section id="main" style="height:auto; background: url(/Content/images/FinBack.jpg) no-repeat center center fixed; background-color: lightblue; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover; ">


        @RenderBody()
    </section>

    

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <footer>
    <div style=" width:100%; height:100px; float:right">
        <nav class="navbar navbar-fixed-bottom" style="  height:50px; background-color:mintcream">
            <p style="color:black"><center> <b> Copy@right to pearlajmal@gmail.com  </b></center></p>
        </nav>
    </div>
    </footer>
</body>
</html>
